<div class="col-md 4 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                {{#if (isEqual userId user.id)}}
                    <h3>Cambiar Contraseña</h3>
                    <form action="../../config/changePass/{{userId}}" method="post">
                <div class="form-group">
                     <label for="exampleInputEmail1">Contraseña Actual</label>
                     <input type="password" name="actual" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingresa tu contraseña Actual">
                     {{!-- <small id="emailHelp" class="form-text text-muted">Letras pequeñitas</small> --}}
                </div>
                  <div class="form-group">
                     <label for="exampleInputEmail1">Contraseña Nueva</label>
                     <input type="password" name = "new" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingresa tu contraseña Nueva">
                     {{!-- <small id="emailHelp" class="form-text text-muted">Letras pequeñitas</small> --}}
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                {{/if}}

                </div>
            </div>
        </div>