<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card ">
                <div class="card-body">
                    <form action="/links/edit/{{link.id_post}}" method="post">
                    <div class="form-group">
                        <input type="text" value="{{link.tittle}}" class="form-control" name="tittle" placeholder="Titulo de tu publicacion" required autofocus> 
                    </div>
                    <div class="form-group pb-3 pt-3">
                        <textarea name="description" class="form-control" id=""  rows="5" placeholder="Descripcion" required>{{link.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block">Save</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>